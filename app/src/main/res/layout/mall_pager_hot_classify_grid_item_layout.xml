<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_goods_item"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/White"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_hot_classify_goods_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp" />

    <TextView
        android:id="@+id/tv_hot_classify_goods_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:text="正在加载商品信息....."
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tv_hot_classify_goods_periods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="88.40*12期"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tv_hot_classify_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:text="￥899.00"
        android:textColor="@color/Black" />
</LinearLayout>