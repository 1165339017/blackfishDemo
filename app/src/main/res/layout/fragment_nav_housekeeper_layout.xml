<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/image_keeper_header_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="信用管家"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_keeper_add"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_keeper_add" />

        <TextView
            android:id="@+id/tv_keeper_monkey"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:gravity="center_vertical"
            android:text="******"
            android:textColor="@color/Black"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="135dp"
            android:layout_marginTop="110dp"
            android:gravity="center_vertical"
            android:text="应还款（元）"
            android:textColor="@color/Black"
            android:textSize="13sp" />


        <ImageView
            android:id="@+id/tv_keeper_show_money"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="50dp"
            android:layout_marginTop="110dp"
            android:src="@drawable/user_icon_eye_close_blue" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="140dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_keeper_grid_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_keeper_overview"
            android:gravity="center_horizontal"
            android:text="账单总览"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/tv_keeper_grid_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_keeper_nofee"
            android:gravity="center_horizontal"
            android:text="免息期"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/tv_keeper_grid_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_keeper_card"
            android:gravity="center_horizontal"
            android:text="办信用卡"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/tv_keeper_grid_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_keeper_loan"
            android:gravity="center_horizontal"
            android:text="我要还款"
            android:textColor="@color/Black" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_keeper_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_card_view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            android:text="小黑鱼..."
            android:textColor="@color/colorGray707061"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/bm_icon_ccb"
            android:text="  建设银行信用卡  2533"
            android:textColor="@color/Black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:text="今日还款"
            android:textColor="@color/Black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_keeper_card_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="1000.00"
            android:textColor="@color/Black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_keeper_card_money"
            android:layout_centerHorizontal="true"
            android:text="应还金额"
            android:textColor="@color/Gray" />


        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_btn_splash"
            android:gravity="center"
            android:text="立即还款"
            android:textColor="@color/Gray" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/icon_keeper_bankcard_example" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_keeper_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="130dp"
        android:drawableLeft="@drawable/icon_gift"
        android:gravity="center"
        android:text="   新人导卡，赠10元还款金"
        android:textColor="@color/Black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_keeper_add_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_btn_yellow_bg"
        android:text="添加账单"
        android:textColor="@color/Black"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_keeper_manager"
            android:text="  账单管理"
            android:textColor="@color/Black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_keeper_manager"
            android:text="  还款提醒"
            android:textColor="@color/Black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableLeft="@drawable/icon_keeper_manager"
            android:text="  信用卡还款"
            android:textColor="@color/Black"
            android:textSize="15sp" />


    </LinearLayout>
</FrameLayout>