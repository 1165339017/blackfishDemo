<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <FrameLayout
        android:id="@+id/fl_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@drawable/user_icon_arrow_left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="提交订单"
            android:textColor="@color/Black"
            android:textSize="18sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_submit"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="当乐猫"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fl_submit"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/tv_name"
        android:text="18225063453"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="上海市浦东新区"
        android:textColor="@color/Black" />

    <ImageView
        android:id="@+id/iv_set_address"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/fl_submit"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/stages_icon_arrow_right_yellow" />

    <ImageView
        android:id="@+id/iv_bar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/tv_address"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/iv_bar"
        android:background="@color/colorGrap" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_goods"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/iv_bar"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv_goods_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_bar"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/iv_goods"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/goods_text"
        android:textColor="@color/Black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/iv_bar"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:gravity="end"
        android:text="￥59.00"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_goods_desc"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/iv_goods"
        android:text="类型:中"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tv_nub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_type"
        android:layout_marginEnd="20dp"
        android:text="x 1"
        android:textColor="@color/Gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/iv_goods"
        android:layout_marginTop="10dp"
        android:background="@color/colorGrap" />

    <TextView
        android:id="@+id/tv_invoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_goods"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="发票选择"
        android:textColor="@color/Black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_invoice"
        android:layout_marginEnd="10dp"
        android:text="不开票 >"
        android:textColor="@color/Black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/tv_invoice"
        android:layout_marginTop="10dp"
        android:background="@color/colorGrap" />

    <TextView
        android:id="@+id/tv_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_invoice"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="优惠劵"
        android:textColor="@color/Black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_discount"
        android:layout_marginEnd="20dp"
        android:gravity="end"
        android:text="无可用"
        android:textColor="@color/Black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/tv_discount"
        android:layout_marginTop="10dp"
        android:background="@color/colorGrap" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_discount"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:text="商品金额"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tv_goods_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_price"
        android:layout_marginEnd="20dp"
        android:text="￥59.0"
        android:textColor="@color/Black" />

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_price"
        android:layout_marginTop="10dp"
        android:background="@color/Black" />

    <TextView
        android:id="@+id/tv_transport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="运费"
        android:textColor="@color/Black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_transport"
        android:layout_marginEnd="20dp"
        android:text="免运费"
        android:textColor="@color/Black" />

    <View
        android:id="@+id/view_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_transport"
        android:layout_marginTop="10dp"
        android:background="@color/Black" />

    <TextView
        android:id="@+id/tv_discount_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="优惠金额"
        android:textColor="@color/Black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/tv_discount_price"
        android:layout_marginEnd="20dp"
        android:text="- ￥0.00"
        android:textColor="@color/Black" />

    <View
        android:id="@+id/view_divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_discount_price"
        android:layout_marginTop="10dp"
        android:background="@color/Black" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_divider2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="订单金额"
        android:textColor="@color/Black" />

    <TextView
        android:id="@+id/tv_order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/view_divider2"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="￥ 59.0"
        android:textColor="@color/colorYellowf1f44e"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_submit_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_btn_pressed"
        android:text="提交订单"
        android:textColor="@color/Black"
        android:textSize="16sp" />
</RelativeLayout>