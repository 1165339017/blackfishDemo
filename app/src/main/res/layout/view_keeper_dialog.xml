<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="220dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_my_dialog">

    <ImageView
        android:id="@+id/iv_dialog_exit"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:src="@drawable/icon_login_header_delete" />

    <ImageView
        android:id="@+id/iv_dialog_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon_dialog_add_bill_1" />

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_dialog_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="你还没有账单，快去添加吧！"
        android:textColor="@color/Black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_dialog_cancel"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/tv_dialog_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_dialog_button"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/Black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_dialog_add_bill"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tv_dialog_title"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_btn_general"
        android:gravity="center"
        android:text="添加账单"
        android:textColor="@color/Black" />

</RelativeLayout>