<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <lf.com.android.blackfishdemo.view.RecyclerViewBanner
        android:id="@+id/rvb_home_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:rvb_autoPlaying="true"
        app:rvb_indicatorGravity="center"
        app:rvb_indicatorSelectedSrc="@drawable/icon_home_banner_selected"
        app:rvb_indicatorSize="5dp"
        app:rvb_indicatorUnSelectedSrc="@drawable/icon_home_banner_unselected" />
</FrameLayout>