<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/rl_dialog"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/White"
app:layout_behavior="@string/bottom_sheet_behavior">

<TextView
    android:id="@+id/tv_dialog_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center"
    android:text="分享到"
    android:textColor="@color/Black"
    android:textSize="16sp" />

<ImageView
    android:id="@+id/iv_close_dialog"
    android:layout_width="15dp"
    android:layout_height="15dp"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@+id/tv_dialog_title"
    android:layout_marginEnd="10dp"
    android:src="@drawable/icon_input_delete" />

<View
    android:id="@+id/view_divider"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_below="@+id/tv_dialog_title"
    android:layout_marginTop="10dp"
    android:background="@color/Black" />

<ImageView
    android:id="@+id/iv_weChat"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_below="@+id/view_divider"
    android:layout_marginStart="80dp"
    android:layout_marginTop="10dp"
    android:scaleType="centerCrop"
    android:src="@drawable/icon_wechat" />

<ImageView
    android:id="@+id/iv_weChat_friend"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@+id/iv_weChat"
    android:layout_marginEnd="80dp"
    android:scaleType="centerCrop"
    android:src="@drawable/icon_wechat_friend" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/iv_weChat"
    android:layout_marginStart="77dp"
    android:layout_marginTop="10dp"
    android:text="微信好友"
    android:textColor="@color/Black" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_below="@+id/iv_weChat"
    android:layout_marginEnd="70dp"
    android:layout_marginTop="10dp"
    android:text="微信朋友圈"
    android:textColor="@color/Black" />
</RelativeLayout>