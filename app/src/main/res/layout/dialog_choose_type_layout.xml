<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_goods"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/shape_image_corners" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/White">

        <ImageView
            android:id="@+id/iv_close_dialog"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/icon_login_header_delete" />

        <TextView
            android:id="@+id/tv_top_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginTop="5dp"
            android:text="￥59.00"
            android:textColor="@color/colorOrange"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_is_have"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_top_price"
            android:layout_marginStart="130dp"
            android:text="有货"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_is_have"
            android:layout_marginStart="130dp"
            android:text="已选：4特大4中1手泵"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_type"
            android:layout_marginStart="130dp"
            android:text="数量：1"
            android:textColor="@color/Black" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tv_num"
            android:layout_marginTop="10dp"
            android:background="@color/Gray" />

        <TextView
            android:id="@+id/tv_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_divider"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:text="颜色"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <lf.com.android.blackfishdemo.view.TagsLayout
            android:id="@+id/labels_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_color"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:minHeight="100dp"
            app:tagHorizontalSpace="10dp"
            app:tagVerticalSpace="10dp" />

        <View
            android:id="@+id/view_divider1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/labels_view"
            android:layout_marginTop="10dp"
            android:background="@color/Gray" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_divider2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="数量"
            android:textColor="@color/Black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_price_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_amount"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/Black" />

        <lf.com.android.blackfishdemo.view.AmountView
            android:id="@+id/amount_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/view_divider1"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp" />

        <View
            android:id="@+id/view_divider2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/amount_view"
            android:layout_marginTop="30dp"
            android:background="@color/Gray" />

        <TextView
            android:id="@+id/tv_diter_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/view_divider2"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_btn_pressed"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:text="确认购买"
            android:textColor="@color/Black"
            android:textSize="16sp" />
    </RelativeLayout>
</RelativeLayout>