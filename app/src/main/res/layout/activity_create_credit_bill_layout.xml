<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_create_credit_bill_header"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/tv_keeper_create_credit_bill_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_to_left" />

        <TextView
            android:id="@+id/tv_mine_set_pwd_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="创建信用卡账单"
            android:textColor="@color/Black" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/shape_divider_layout"
        android:orientation="vertical"
        android:showDividers="middle">

        <lf.com.android.blackfishdemo.view.SuperEditText
            android:id="@+id/super_edit_card_number"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:hintTextRight="请输入卡号"
            app:iconLeft="@drawable/icon_create_bank_number"
            app:titleText="卡号"
            app:typeMode="0" />

        <lf.com.android.blackfishdemo.view.SuperEditText
            android:id="@+id/super_edit_belong_to_bank"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:hintTextRight="请选择发卡银行"
            app:iconLeft="@drawable/icon_create_bank"
            app:titleText="所属银行"
            app:typeMode="2" />

        <lf.com.android.blackfishdemo.view.SuperEditText
            android:id="@+id/super_edit_card_type"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:hintTextRight="信用卡"
            app:iconLeft="@drawable/icon_create_card_type"
            app:titleText="卡片类型"
            app:typeMode="1" />

        <lf.com.android.blackfishdemo.view.SuperEditText
            android:id="@+id/super_edit_username"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:hintTextRight="请输入用户名"
            app:iconLeft="@drawable/icon_create_username"
            app:titleText="用户名"
            app:typeMode="0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:divider="@drawable/shape_divider_layout"
        android:orientation="vertical"
        android:showDividers="middle">

        <lf.com.android.blackfishdemo.view.SuperEditText
            android:id="@+id/super_edit_lines"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:hintTextRight="请输入信用额度"
            app:iconLeft="@drawable/icon_create_username"
            app:titleText="信用额度"
            app:typeMode="0" />

        <lf.com.android.blackfishdemo.view.SuperEditText
            android:id="@+id/super_edit_bill"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:hintTextRight="请输入账单金额"
            app:iconLeft="@drawable/icon_create_username"
            app:titleText="账单金额"
            app:typeMode="0" />

        <lf.com.android.blackfishdemo.view.SuperEditText
            android:id="@+id/super_edit_bill_day"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:hintTextRight="15 日"
            app:iconLeft="@drawable/icon_create_bill_day"
            app:titleText="账单日"
            app:typeMode="3" />

        <lf.com.android.blackfishdemo.view.SuperEditText
            android:id="@+id/super_edit_pay_bill_day"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            app:hintTextRight="5 日"
            app:iconLeft="@drawable/icon_create_pay_bill_day"
            app:titleText="还款日"
            app:typeMode="3" />

        <Button
            android:id="@+id/btn_create_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_btn_pressed"
            android:includeFontPadding="false"
            android:text="保存"
            android:textColor="@color/Black"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>